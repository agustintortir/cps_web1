<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/zoo-style.css" />
</head>
<body>
    <div>
        <ul class="nav">
            <li>
                <a href="@Url.Action("Index","Zoo")">Attractions</a>
            </li>
            <li>
                <a href="@Url.Action("VisitorDetails","Zoo")">Visitor Info</a>
            </li>
            <li>
                <a href="@Url.Action("BuyTickets", "Zoo")">Tickets</a>
            </li>
        </ul>
        <div class="header-container">
            <h1 class="content"> Bienvenido al Zoo Center </h1>
            <div class="slider-buttons">
                <img class="next" src="~/images/nextArrow.png" onclick="nextImage()" />
            </div>
        </div>
    </div>

    @RenderBody()
    @RenderSection("Scripts", false)
</body>
</html>
