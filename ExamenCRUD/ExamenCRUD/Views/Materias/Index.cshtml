@model IEnumerable<ExamenCRUD.Models.Materia>
@{
    ViewData["Title"] = "Listado de Materias";
    var search = ViewData["Search"] as string ?? "";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Materias</h2>
    <a asp-action="Create" class="btn btn-primary">Nueva</a>
</div>

<form class="row g-2 mb-3" method="get">
    <div class="col-md-4">
        <input name="search" value="@search" class="form-control" placeholder="Buscar por nombre..." />
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-secondary w-100" type="submit">Buscar</button>
    </div>
</form>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cuatrimestre</th>
            <th>Carrera</th>
            <th style="width: 180px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Nombre</td>
        <td>@item.Cuatrimestre</td>
        <td>@item.Carrera?.Nombre</td>
        <td class="text-end">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                          onsubmit="return confirm('¿Eliminar @item.Nombre?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-danger">Borrar</button>
            </form>
        </td>
    </tr>
}
    </tbody>
</table>
